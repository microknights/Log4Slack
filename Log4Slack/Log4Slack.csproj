<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>MicroKnights.Logging</RootNamespace>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Frank Løvendahl Nielsen</Authors>
    <Company>MicroKnight ApS</Company>
    <Product>Log4Slack</Product>
    <Description>Slack appender for Log4Net</Description>
    <PackageLicenseUrl>https://logging.apache.org/log4net/license.html</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/microknights/Log4Slack</PackageProjectUrl>
    <RepositoryUrl>https://github.com/microknights/Log4Slack</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageId>MicroKnights.Log4Slack</PackageId>
    <PackageTags>log4net Slack Appender</PackageTags>
    <PackageReleaseNotes>DotNet netstandard2.1 version of Log4Slack</PackageReleaseNotes>
    <Version>1.2.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.12" />
  </ItemGroup>

</Project>
